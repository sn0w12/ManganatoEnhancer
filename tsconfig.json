{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node"
    },
    "include": ["src/**/*.ts"]
  }
