{
    "manifest_version": 3,
    "name": "Manganato Enhancer",
    "description": "Enhances the user experience on manganato.",
    "version": "0.1.2",
    "permissions": ["tabs", "activeTab", "scripting"],
    "host_permissions": [
      "https://manganato.com/*",
      "https://chapmanganato.com/*",
      "https://chapmanganato.to/*"
    ],
    "background": {
      "service_worker": "dist/background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://manganato.com/*",
          "https://chapmanganato.com/*",
          "https://chapmanganato.to/*"
        ],
        "js": [
          "dist/content.js"
        ]
      }
    ]
  }
